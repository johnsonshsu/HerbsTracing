@model IEnumerable<herbstracing.Models.z_bas_video>

@{
    ViewData["Title"] = "影片基本資料列表";
    Layout = "_LayoutAdmin";
}

@await Html.PartialAsync("_PartialHeader")
<div class="table-responsive">
    <table class="table table-bordered">
        <thead class="table-secondary">
            <tr>
                <th>
                    @await Html.PartialAsync("_PartialCreate")
                </th>
                <th>
                    @Html.DisplayNameSortFor(model => model.misenabled)
                </th>
                <th>
                    @Html.DisplayNameSortFor(model => model.mdate)
                </th>
                <th>
                    @Html.DisplayNameSortFor(model => model.mfile)
                </th>
                <th>
                    @Html.DisplayNameSortFor(model => model.mtitle)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                ActionService.RowId = item.rowid;
                ActionService.RowData = $"{item.mtitle}";
                <tr>
                    <td>
                        @await Html.PartialAsync("_PartialEdit")
                        @Html.ActionLink("刪除", "Delete", ActionService.Controller, new { area = ActionService.Area , id=
                        item.rowid} ,new { @class = "btn btn-danger", onclick = "return confirm('是否確定要刪除?');" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.misenabled)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.mdate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.mfile)
                </td>
                <td class="table-wrap">
                    @Html.DisplayFor(modelItem => item.mtitle)
                </td>
            </tr>
                        }
        </tbody>
    </table>
</div>