@model herbstracing.Models.z_bas_recipes

@{
    string str_command = (Model.rowid == 0) ? "新增" : "修改";
    ViewData["Title"] = $"食譜基本資料{str_command}";
    Layout = "_LayoutAdmin";
    var codeList = new List<SelectListItem>{
new SelectListItem { Text = "養生茶飲", Value = "A" },
new SelectListItem { Text = "養生藥膳", Value = "B" }};

}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal  mt-2">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.rowid)

        <div class="row form-group">
            <div class="col-md-2">
                @Html.LabelFor(model => model.mcode_name, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.mcode, codeList , new { @class = "form-control selectpicker" ,
                            @data_live_search = "false" })
                @Html.ValidationMessageFor(model => model.mcode, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-2">
                @Html.LabelFor(model => model.msort, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.msort, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.msort, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-2">
                @Html.LabelFor(model => model.mname, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.mname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.mname, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-2">
                @Html.LabelFor(model => model.care, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.care, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.care, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-2">
                @Html.LabelFor(model => model.effect, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.effect, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.effect, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    @await Html.PartialAsync("_PartialSubmit")
}