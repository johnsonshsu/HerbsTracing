@model IEnumerable<herbstracing.Models.z_bas_item_bom>

@{
    ViewData["Title"] = "料品組成資料列表";
    Layout = "_LayoutAdmin";
}

@await Html.PartialAsync("_PartialHeader")
<div class="table-responsive">
    <table class="table table-bordered">
        <thead class="table-secondary">
            <tr>
                <th>
                    @await Html.PartialAsync("_PartialCreate")
                    @Html.ActionLink("返回", "Init", "BASP006", new { area = ActionService.Area }, new { @class = "btn btn-primary" })
                </th>
                <th>
                    @Html.DisplayNameSortFor(model => model.mno)
                </th>
                <th>
                    @Html.DisplayNameSortFor(model => model.mname)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                ActionService.RowId = item.rowid;
                ActionService.RowData = $"{item.mno} {item.mname}";
                <tr>
                    <td>
                        @await Html.PartialAsync("_PartialEdit")
                        @await Html.PartialAsync("_PartialDelete")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.mno)
                    </td>
                    <td class="table-wrap">
                        @Html.DisplayFor(modelItem => item.mname)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>