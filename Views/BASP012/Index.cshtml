@model IEnumerable<herbstracing.Models.z_bas_recipes>

@{
    ViewData["Title"] = "食譜基本資料列表";
    Layout = "_LayoutAdmin";
}

@await Html.PartialAsync("_PartialHeader")
<div class="table-responsive">
    <table class="table table-bordered">
        <thead class="table-secondary">
            <tr>
                <th>
                    @await Html.PartialAsync("_PartialCreate")
                </th>
                <th>
                    @Html.DisplayNameSortFor(model => model.mcode_name)
                </th>
                <th>
                    @Html.DisplayNameSortFor(model => model.msort)
                </th>
                <th>
                    @Html.DisplayNameSortFor(model => model.mname)
                </th>
                <th>
                    @Html.DisplayNameSortFor(model => model.material)
                </th>
                <th>
                    @Html.DisplayNameSortFor(model => model.care)
                </th>
                <th>
                    @Html.DisplayNameSortFor(model => model.effect)
                </th>
                <th>
                    @Html.DisplayNameSortFor(model => model.file1)
                </th>
                <th>
                    @Html.DisplayNameSortFor(model => model.file2)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                ActionService.RowId = item.rowid.ToString();
                ActionService.RowData = item.mname ?? "";
                <tr>
                    <td>
                        @await Html.PartialAsync("_PartialEdit")
                        @Html.ActionLink("刪除", "Delete", ActionService.Controller,
                            new { area = ActionService.Area , id=item.rowid} ,
                            new { @class = "btn btn-danger", onclick = "return confirm('是否確定要刪除?');" })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.mcode_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.msort)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.mname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.material)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.care)
                    </td>
                    <td class="table-wrap">
                        @Html.DisplayFor(modelItem => item.effect)
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.file1))
                        {
                            <img src="@Url.Content(item.file1!)" alt="圖片1" style="max-width: 100px; max-height: 100px;" />
                        }
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.file2))
                        {
                            <img src="@Url.Content(item.file2!)" alt="圖片2" style="max-width: 100px; max-height: 100px;" />
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>