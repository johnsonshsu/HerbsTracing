@model IEnumerable<herbstracing.Models.z_bas_record>

@{
    ViewData["Title"] = "產地水質檢驗記錄列表";
    Layout = "_LayoutAdmin";
}

@await Html.PartialAsync("_PartialHeader")
<div class="table-responsive">
    <table class="table table-bordered">
        <thead class="table-secondary">
            <tr>
                <th>
                    @await Html.PartialAsync("_PartialCreate")
                    @Html.ActionLink("返回", "Init", "QCMP001", new { area = ActionService.Area }, new { @class = "btn btn-primary" , id= SessionService.ParentPage })
                </th>
                <th>
                    @Html.DisplayNameSortFor(model => model.mdate)
                </th>
                <th>
                    @Html.DisplayNameSortFor(model => model.mdescribe)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                ActionService.RowId = item.rowid;
                ActionService.RowData = $"{item.mdate}";
                <tr>
                    <td>
                        @await Html.PartialAsync("_PartialEdit")
                        @await Html.PartialAsync("_PartialDelete")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.mdate)
                    </td>
                    <td class="table-wrap">
                        @Html.DisplayFor(modelItem => item.mdescribe)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>