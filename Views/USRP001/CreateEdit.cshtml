@model herbstracing.Models.z_sys_user

@{
    string str_command = (string.IsNullOrEmpty(Model.rowid) || Model.rowid == "0") ? "新增" : "修改";
    ViewData["Title"] = $"登入帳號{str_command}";
    Layout = "_LayoutAdmin";
    var sexList = new List<SelectListItem>
    {
        new SelectListItem { Text = "男性", Value = "男性" },
        new SelectListItem { Text = "女性", Value = "女性" }
    };
    var codeList = new List<SelectListItem>
    {
        new SelectListItem { Text = "正常", Value = "N" },
        new SelectListItem { Text = "停用", Value = "S" }
    };
    using var role = new sql_z_sys_role();
    var roleList = role.GetDropDownList(false);
}

