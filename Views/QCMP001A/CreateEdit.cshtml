@model herbstracing.Models.z_bas_record

@{
    string str_command = (string.IsNullOrEmpty(Model.rowid) || Model.rowid == "0") ? "新增" : "修改";
    ViewData["Title"] = $"產地水質檢驗記錄資料{str_command}";
    Layout = "_LayoutAdmin";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal  mt-2">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.rowid)
        @Html.HiddenFor(model => model.place_no)
        @Html.HiddenFor(model => model.item_no)
        @Html.HiddenFor(model => model.lot_no)

        <div class="row form-group">
            <div class="col-md-2">
                @Html.LabelFor(model => model.mdate, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.mdate, new { htmlAttributes = new { @class = "form-control datepicker" , @type="text" } })
                @Html.ValidationMessageFor(model => model.mdate, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-2">
                @Html.LabelFor(model => model.mdescribe, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.mdescribe, new { @class = "form-control" , @rows = "10" } )
                @Html.ValidationMessageFor(model => model.mdescribe, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    @await Html.PartialAsync("_PartialSubmit")
}